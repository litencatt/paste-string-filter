{
  "name": "paste-string-filter",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "Filter pasting string with regexp settings.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "dist/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": ["loader.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "https://*/*"
      ],
      "resources": ["dist/*"]
    }
  ]
}
